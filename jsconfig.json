{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
